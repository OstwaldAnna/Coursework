<Page x:Class="magazin.Pages.AddProductPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:magazin.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddProductPage"
      Background="#A7B9D1"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
      FontFamily="/magazin;component/Resurs/Fonts/#Roboto"
      FontSize="20">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" 
                    Height="350" Width="350" 
                    Orientation="Vertical">
            <TextBox 
                    x:Name="TbProduct"
                    materialDesign:HintAssist.Hint="Товар"
                    Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" Width="340"/>
            <ComboBox
                materialDesign:HintAssist.Hint="OS">
                <ComboBoxItem
    Content="Android" />
                <ComboBoxItem
    Content="iOS" />
                <ComboBoxItem
    Content="Linux" />
                <ComboBoxItem
    Content="Windows" />
            </ComboBox>


        </StackPanel>
    </Grid>
</Page>
